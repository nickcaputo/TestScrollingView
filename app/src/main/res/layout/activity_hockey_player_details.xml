<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.npcaputo.testscrollingview.activities.HockeyPlayerDetailsActivity">

    <ImageView
        android:id="@+id/hockey_player_activity_image"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_margin="@dimen/hockey_player_margin"
        android:contentDescription="@string/hockeyPlayerImageContentDescription"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/hockey_player_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/hockey_player_activity_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/dark_grey"
        android:textSize="14sp" />


</LinearLayout>
